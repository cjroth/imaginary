<!DOCTYPE html>
<html>
  <head>
    <title><%= blog.name %></title>
    <%- include head %>
  </head>
  <body class="posts">

    <% if (user) { %>
      <% include header %>
    <% } %>

    <table class="table">
      <% for (var i in posts) { %>
        <% var post = posts[i]; %>
        <tr>
          <td><a class="post-title" href="<%= post.slug %>"><%= post.title %></a></td>
          <td><span class="post-status"><%= post.published_at || 'Draft' %></a></td>
        </tr>
      <% } %>
    </table>

  </body>
</html>